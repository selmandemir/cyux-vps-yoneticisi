#!/bin/bash
clear
# BaÅŸlÄ±k metnini mavi arka plan Ã¼zerine beyaz ve kalÄ±n olarak yazdÄ±r.
echo -e "\E[44;1;37m           ðŸ‰ã…¤â„¹ã…¤VPS BÄ°LGÄ°LERÄ°ã…¤â„¹ã…¤ðŸ‰           \E[0m"
echo ""

# --- Ä°ÅŸletim Sistemi Bilgileri ---
# /etc/lsb-release dosyasÄ± varsa, bu Debian/Ubuntu tabanlÄ± bir sistemdir.
if [ -f /etc/lsb-release ]; then
    echo -e "\033[1;31mâ€¢ \033[1;32mÄ°ÅžLETÄ°M SÄ°STEMÄ°\033[1;31m â€¢\033[0m"
    echo ""
    # Gerekli bilgileri dosyadan oku ve ekrana yazdÄ±r.
    name=$(cat /etc/lsb-release |grep DESCRIPTION |awk -F = {'print $2'})
    codename=$(cat /etc/lsb-release |grep CODENAME |awk -F = {'print $2'})
    echo -e "\033[1;33mVersiyon: \033[1;37m$name"
    echo -e "\033[1;33mKod AdÄ±: \033[1;37m$codename"
    echo -e "\033[1;33mÃ‡ekirdek (Kernel): \033[1;37m$(uname -s)"
    echo -e "\033[1;33mÃ‡ekirdek SÃ¼rÃ¼mÃ¼: \033[1;37m$(uname -r)"
    if [ -f /etc/os-release ]; then
        devlike=$(cat /etc/os-release |grep LIKE |awk -F = {'print $2'})
        echo -e "\033[1;33mTÃ¼retildiÄŸi Sistem: \033[1;37m$devlike"
        echo ""
    fi
else
    # EÄŸer /etc/lsb-release yoksa, baÅŸka bir Linux daÄŸÄ±tÄ±mÄ±dÄ±r.
    system=$(cat /etc/issue.net)
    echo -e "\033[1;31mâ€¢ \033[1;32mÄ°ÅžLETÄ°M SÄ°STEMÄ°\033[1;31m â€¢\033[0m"
    echo ""
    echo -e "\033[1;33mVersiyon: \033[1;37m$system"
    echo ""
fi

# --- Ä°ÅŸlemci (CPU) Bilgileri ---
if [ -f /proc/cpuinfo ]; then
    # AnlÄ±k CPU kullanÄ±mÄ±nÄ± hesapla.
    uso=$(top -bn1 | awk '/Cpu/ { cpu = "" 100 - $8 "%" }; END { print cpu }')
    echo -e "\033[1;31mâ€¢ \033[1;32mÄ°ÅžLEMCÄ°\033[1;31m â€¢\033[0m"
    echo ""
    # Gerekli bilgileri /proc/cpuinfo dosyasÄ±ndan oku ve ekrana yazdÄ±r.
    modelo=$(cat /proc/cpuinfo |grep "model name" |uniq |awk -F : {'print $2'})
    cpucores=$(grep -c cpu[0-9] /proc/stat)
    cache=$(cat /proc/cpuinfo |grep "cache size" |uniq |awk -F : {'print $2'})
    echo -e "\033[1;33mModel:\033[1;37m$modelo"
    echo -e "\033[1;33mÃ‡ekirdek SayÄ±sÄ±:\033[1;37m $cpucores"
    echo -e "\033[1;33mÃ–nbellek Boyutu:\033[1;37m$cache"
    echo -e "\033[1;33mMimari: \033[1;37m$(uname -p)"
    echo -e "\033[1;33mKullanÄ±m: \033[37m$uso"
    echo ""
else
    echo -e "\033[1;32mÄ°ÅžLEMCÄ°\033[0m"
    echo ""
    echo "Bilgiler alÄ±namadÄ±."
fi

# --- RAM Bellek Bilgileri ---
if free 1>/dev/null 2>/dev/null; then
    # RAM bilgilerini 'free' komutuyla al ve formatla.
    ram1=$(free -h | grep -i mem | awk {'print $2'}) # Toplam
    ram2=$(free -h | grep -i mem | awk {'print $4'}) # BoÅŸ
    ram3=$(free -h | grep -i mem | awk {'print $3'}) # KullanÄ±lan
    usoram=$(free -m | awk 'NR==2{printf "%.2f%%\t\t", $3*100/$2 }') # KullanÄ±m yÃ¼zdesi

    echo -e "\033[1;31mâ€¢ \033[1;32mRAM BELLEK\033[1;31m â€¢\033[0m"
    echo ""
    echo -e "\033[1;33mToplam: \033[1;37m$ram1"
    echo -e "\033[1;33mKullanÄ±mda: \033[1;37m$ram3"
    echo -e "\033[1;33mBoÅŸta: \033[1;37m$ram2"
    echo -e "\033[1;33mKullanÄ±m YÃ¼zdesi: \033[37m$usoram"
    echo ""
else
    echo -e "\033[1;32mRAM BELLEK\033[0m"
    echo ""
    echo "Bilgiler alÄ±namadÄ±."
fi

# --- Aktif Servisler ve Portlar ---
echo -e "\033[1;31mâ€¢ \033[1;32mÃ‡ALIÅžAN SERVÄ°SLER\033[1;31m â€¢\033[0m"
echo ""
# 'lsof' komutu ile dinlemede olan tÃ¼m servisleri ve portlarÄ±nÄ± bul.
PT=$(lsof -V -i tcp -P -n | grep -v "ESTABLISHED" |grep -v "COMMAND" | grep "LISTEN")
# Bulunan servisleri ve portlarÄ± dÃ¶ngÃ¼ ile ekrana yazdÄ±r.
for porta in `echo -e "$PT" | cut -d: -f2 | cut -d' ' -f1 | uniq`; do
    svcs=$(echo -e "$PT" | grep -w "$porta" | awk '{print $1}' | uniq)
    echo -e "\033[1;33mServis \033[1;37m$svcs \033[1;33mPort \033[1;37m$porta"
done