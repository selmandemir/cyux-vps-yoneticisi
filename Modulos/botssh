#!/bin/bash
clear

# --- FONKSİYON: Arka planda bir komut çalışırken "Lütfen Bekleyin" animasyonu gösterir ---
fun_bar() {
    # Çalıştırılacak komutları bir diziye ata.
    comando[0]="$1"
    comando[1]="$2"
    
    # Komutları arka planda çalıştır. Bittiğinde 'fim' adında bir dosya oluşturur.
    (
        [[ -e $HOME/fim ]] && rm $HOME/fim
        ${comando[0]} -y >/dev/null 2>&1
        ${comando[1]} -y >/dev/null 2>&1
        touch $HOME/fim
    ) >/dev/null 2>&1 &
    
    # İmleci gizle.
    tput civis
    echo -ne "\033[1;33m["
    
    # 'fim' dosyası oluşana kadar dönen bir yükleme çubuğu animasyonu göster.
    while true; do
        for ((i = 0; i < 18; i++)); do
            echo -ne "\033[1;31m#"
            sleep 0.1s
        done
        [[ -e $HOME/fim ]] && rm $HOME/fim && break
        echo -e "\033[1;33m]"
        sleep 1s
        tput cuu1 # Bir satır yukarı çık
        tput dl1  # Satırı sil
        echo -ne "\033[1;33m["
    done
    
    # İşlem bittiğinde onayla ve imleci tekrar görünür yap.
    echo -e "\033[1;33m]\033[1;37m -\033[1;32m TAMAM !\033[1;37m"
    tput cnorm
}

# --- FONKSİYON: Botu Açar veya Kapatır ---
fun_botOnOff() {
    # 'bot_plus' adında bir screen oturumunun çalışıp çalışmadığını kontrol et.
    if [[ $(ps x | grep "bot_plus" | grep -v grep | wc -l) = '0' ]]; then
        # --- BOT AKTİVASYON BÖLÜMÜ ---
        clear
        echo -e "\E[44;1;37m      ㅤ🐉ㅤCyux VPS Yöneticisi Telegram Bot Kurulumuㅤ🐉ㅤ      \E[0m\n"
        echo -ne "\033[1;32m◇ @BotFather'dan Aldığınız Bot Token'ını Girin:\033[1;37m "
        read tokenbot
        echo ""
        echo -ne "\033[1;32m◇ Telegram ID'nizi Girin:\033[1;37m "
        read iduser
        clear
        echo -e "\033[1;32m      ㅤ🐉ㅤCyux VPS Yöneticisi Telegram Botu Başlatılıyor...ㅤ🐉ㅤ\033[0m\n"
        
        # Bot'u başlatan ve otomatik başlatmaya ekleyen alt fonksiyon.
        fun_bot1() {
            # Gerekli ShellBot.sh kütüphanesini indir.
            wget -qO- https://raw.githubusercontent.com/selmandemir/cyux-vps-yoneticisi/main/Install/ShellBot.sh > /etc/VPSManager/ShellBot.sh
            
            cd /etc/VPSManager
            # Botu 'bot_plus' adıyla yeni bir screen oturumunda başlat.
            screen -dmS bot_plus ./bot $tokenbot $iduser >/dev/null 2>&1
            
            # Bot'un sistem yeniden başladığında otomatik çalışması için /etc/autostart dosyasına ekle.
            if [[ $(grep -wc "bot_plus" /etc/autostart) = '0' ]]; then
                echo -e "ps x | grep 'bot_plus' | grep -v 'grep' || (cd /etc/VPSManager && sudo screen -dmS bot_plus ./bot $tokenbot $iduser && cd $HOME)" >>/etc/autostart
            else
                sed -i '/bot_plus/d' /etc/autostart
                echo -e "ps x | grep 'bot_plus' | grep -v 'grep' || (cd /etc/VPSManager && sudo screen -dmS bot_plus ./bot $tokenbot $iduser && cd $HOME)" >>/etc/autostart
            fi
            
            # Botun durumunu kontrol eden bir görevi crontab'a ekle.
            [[ $(crontab -l | grep -c "verifbot") = '0' ]] && (crontab -l 2>/dev/null; echo "@daily /bin/verifbot") | crontab -
            cd $HOME
        }
        
        fun_bar 'fun_bot1' # İşlem sırasında animasyon göster.
        
        # Bot'un çalışıp çalışmadığını kontrol et ve sonuç mesajını göster.
        [[ $(ps x | grep "bot_plus" | grep -v grep | wc -l) != '0' ]] && echo -e "\n\033[1;32m🐉ㅤCyux VPS Yöneticisi Telegram Botu Aktif Edildi!ㅤ🐉\033[0m" || echo -e "\n\033[1;31m◇ HATA! GİRDİĞİNİZ BİLGİLERİ KONTROL EDİN\033[0m"
        sleep 2
        menu
    else
        # --- BOT DEVRE DIŞI BIRAKMA BÖLÜMÜ ---
        clear
        echo -e "\033[1;32m🐉ㅤCyux VPS Yöneticisi Telegram Botu Durduruluyor...ㅤ🐉\033[0m\n"
        
        # Bot'u durduran ve otomatik başlatmadan kaldıran alt fonksiyon.
        fun_bot2() {
            screen -r -S "bot_plus" -X quit # Screen oturumunu sonlandır.
            screen -wipe 1>/dev/null 2>/dev/null
            sed -i '/bot_plus/d' /etc/autostart # Otomatik başlatma dosyasından sil.
            crontab -l | grep -v 'verifbot' | crontab - # Crontab görevini kaldır.
            sleep 1
        }
        
        fun_bar 'fun_bot2' # İşlem sırasında animasyon göster.
        echo -e "\n\033[1;32m \033[1;31m🐉ㅤCyux VPS Yöneticisi Telegram Botu Durduruldu!ㅤ🐉\033[0m"
        sleep 2
        menu
    fi
}

# --- FONKSİYON: İlk kurulum için talimatları gösterir ---
fun_instbot() {
    echo -e "\E[44;1;37m      ㅤ🐉ㅤCyux VPS Yöneticisi Telegram Bot Kurulumuㅤ🐉ㅤ      \E[0m\n"
    echo -e "               \033[1;33m[\033[1;31m!\033[1;33m] \033[1;31mDİKKAT! \033[1;33m[\033[1;31m!\033[1;33m]\033[0m"
    echo -e "\n\033[1;32m1° \033[1;37m- \033[1;33mTelegram hesabınız üzerinden aşağıdaki botlara erişin\033[1;37m:\033[0m"
    echo -e "\n\033[1;32m2° \033[1;37m- \033[1;33mBOT \033[1;37m@BotFather \033[1;33mİLE BOTUNUZU OLUŞTURUN. \033[1;31m@BotFather'a şunu gönderin: \033[1;37m/newbot\033[0m"
    echo -e "\n\033[1;32m3° \033[1;37m- \033[1;33mBOT \033[1;37m@TwincyBot \033[1;33mİLE ID'NİZİ ALIN. \033[1;31m@TwincyBot'a şunu gönderin: \033[1;37m/id\033[0m"
    echo -e "\033[0;34m◇────────────────────────────────────────────────◇\033[1;32m"
    echo ""
    read -p "◇ DEVAM ETMEK İSTER MİSİNİZ ? [e/h]: " -e -i e resposta
    if [[ "$resposta" = 'e' ]]; then
        fun_botOnOff
    else
        echo -e "\n\033[1;31m◇ Geri dönülüyor...\033[0m"
        sleep 2
        menu
    fi
}

# --- ANA MANTIK ---
# Eğer ShellBot kütüphanesi zaten kuruluysa, direkt aç/kapa menüsünü göster.
# Kurulu değilse, ilk kurulum talimatlarını göster.
[[ -f "/etc/VPSManager/ShellBot.sh" ]] && fun_botOnOff || fun_instbot