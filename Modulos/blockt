#!/bin/bash
clear
IP=$(wget -qO- ipv4.icanhazip.com)
# GÃ¼venlik duvarÄ± kurallarÄ±nÄ±n aktif olup olmadÄ±ÄŸÄ±nÄ± anlamak iÃ§in bir kontrol dosyasÄ± tanÄ±mla.
arq="/etc/Plus-torrent"

# BaÅŸlÄ±k metnini mavi arka plan Ã¼zerine beyaz ve kalÄ±n olarak yazdÄ±r.
echo -e "\E[44;1;37m        ã…¤ðŸ‰ã…¤TORRENT ENGELLEME GÃœVENLÄ°K DUVARIã…¤ðŸ‰ã…¤         \E[0m"
echo ""

# EÄŸer kontrol dosyasÄ± varsa (yani kurallar aktifse), kaldÄ±rma menÃ¼sÃ¼nÃ¼ gÃ¶ster.
if [[ -e "$arq" ]]; then
    # --- FONKSÄ°YON: TÃ¼m iptables kurallarÄ±nÄ± temizler (GÃ¼venlik DuvarÄ±nÄ± KapatÄ±r) ---
    fun_fireoff () {
        iptables -P INPUT ACCEPT
        iptables -P OUTPUT ACCEPT
        iptables -P FORWARD ACCEPT
        iptables -t mangle -F
        iptables -t mangle -X
        iptables -t nat -F
        iptables -t nat -X
        iptables -t filter -F
        iptables -t filter -X
        iptables -F
        iptables -X
        rm $arq # Kontrol dosyasÄ±nÄ± sil
        sleep 3
    }
    # --- FONKSÄ°YON: KurallarÄ± kaldÄ±rÄ±rken bekleme animasyonu gÃ¶sterir ---
    fun_spn1 () {
        helice () {
            fun_fireoff > /dev/null 2>&1 & 
            tput civis # Ä°mleci gizle
            while [ -d /proc/$! ]; do
                for i in / - \\ \|; do
                    sleep .1
                    echo -ne "\e[1D$i"
                done
            done
            tput cnorm # Ä°mleci gÃ¶rÃ¼nÃ¼r yap
        }
        echo -ne "\033[1;31mâ—‡ GÃœVENLÄ°K DUVARI KALDIRILIYOR\033[1;32m.\033[1;33m.\033[1;31m. \033[1;32m"
        helice
        echo -e "\e[1DTamam"
    }
    
    # KullanÄ±cÄ±ya kurallarÄ± kaldÄ±rmak isteyip istemediÄŸini sor.
    read -p "$(echo -e "\033[1;32mâ—‡ GÃœVENLÄ°K DUVARI KURALLARINI KALDIRMAK Ä°STER MÄ°SÄ°NÄ°Z? \033[1;33m[e/h]:\033[1;37m") " -e -i h resp
    if [[ "$resp" = 'e' ]]; then
        echo "" 
        fun_spn1
        echo ""
        echo -e "\033[1;33mâ—‡ TORRENT TRAFÄ°ÄžÄ° SERBEST BIRAKILDI!\033[0m"
        echo ""
        echo -e "\033[1;32mâ—‡ GÃœVENLÄ°K DUVARI BAÅžARIYLA KALDIRILDI!"
        echo ""
        # EÄŸer OpenVPN kuruluysa, tamamlama iÃ§in sistemi yeniden baÅŸlatmayÄ± Ã¶ner.
        if [[ -e /etc/openvpn/openvpn-status.log ]]; then
            echo -e "\033[1;31m[\033[1;33m!\033[1;31m]\033[1;33mâ—‡ Ä°ÅžLEMÄ° TAMAMLAMAK Ä°Ã‡Ä°N SÄ°STEMÄ° YENÄ°DEN BAÅžLATIN"
            echo ""
            read -p "$(echo -e "\033[1;32mâ—‡ ÅžÄ°MDÄ° YENÄ°DEN BAÅžLATILSIN MI \033[1;31m? \033[1;33m[e/h]:\033[1;37m ")" -e -i e respost
            echo ""
            if [[ "$respost" = 'e' ]]; then
                echo -ne "\033[1;31mâ—‡ Yeniden baÅŸlatÄ±lÄ±yor" 
                for i in $(seq 1 1 5); do
                    echo -n "."
                    sleep 1
                done
                reboot
            fi
        fi
        sleep 2
        menu
    else
        sleep 1
        menu
    fi
else
    # EÄŸer kontrol dosyasÄ± yoksa (yani kurallar aktif deÄŸilse), kurulum menÃ¼sÃ¼nÃ¼ gÃ¶ster.
    echo -e "\033[1;31m[\033[1;33m!\033[1;31m]\033[1;33m BETA FONKSÄ°YON, SORUMLULUK SÄ°ZE AÄ°TTÄ°R"
    echo ""
    read -p "$(echo -ne "\033[1;32mâ—‡ GÃœVENLÄ°K DUVARI KURALLARINI UYGULAMAK Ä°STER MÄ°SÄ°NÄ°Z ? \033[1;33m[e/h]:\033[1;37m") " -e -i h resp
    if [[ "$resp" = 'e' ]]; then
        echo ""
        echo -ne "\033[1;33mâ—‡ DEVAM ETMEK Ä°Ã‡Ä°N IP ADRESÄ°NÄ°ZÄ° DOÄžRULAYIN: \033[1;37m"; read -e -i $IP IP
        if [[ -z "$IP" ]]; then
            echo ""
            echo -e "\033[1;31mâ—‡ GeÃ§ersiz IP\033[1;32m"
            sleep 1
            echo ""
            read -p "â—‡ IP Adresinizi Girin: " IP
        fi
        echo ""
        sleep 1
        
        # --- FONKSÄ°YON: Torrent'i engelleyen iptables kurallarÄ±nÄ± oluÅŸturur ---
        fun_fireon () {
            # Aktif olarak dinlenen portlarÄ± bulan alt fonksiyon.
            mportas () {
                unset portas
                portas_var=$(lsof -V -i tcp -P -n | grep -v "ESTABLISHED" |grep -v "COMMAND" | grep "LISTEN")
                while read port; do
                    var1=$(echo $port | awk '{print $1}') && var2=$(echo $port | awk '{print $9}' | awk -F ":" '{print $2}')
                    [[ "$(echo -e $portas|grep "$var1 $var2")" ]] || portas+="$var1 $var2\n"
                done <<< "$portas_var"
                i=1
                echo -e "$portas"
            }
            [[ $(iptables -h|wc -l) -lt 5 ]] && apt-get install iptables -y > /dev/null 2>-1
            NIC=$(ip -4 route ls | grep default | grep -Po '(?<=dev )(\S+)' | head -1)
            
            # KurallarÄ± /etc/Plus-torrent dosyasÄ±na yaz.
            # Zaten kurulmuÅŸ ve iliÅŸkili baÄŸlantÄ±lara izin ver.
            echo 'iptables -A INPUT -m state --state ESTABLISHED,RELATED -j ACCEPT
            iptables -A OUTPUT -m state --state ESTABLISHED,RELATED -j ACCEPT
            iptables -A FORWARD -m state --state ESTABLISHED,RELATED -j ACCEPT
            iptables -t filter -A INPUT -m state --state RELATED,ESTABLISHED -j ACCEPT' > $arq
            # DNS ve DHCP gibi temel servislere izin ver.
            echo 'iptables -A OUTPUT -p tcp --dport 53 -m state --state NEW -j ACCEPT
            iptables -A OUTPUT -p udp --dport 53 -m state --state NEW -j ACCEPT
            iptables -A OUTPUT -p tcp --dport 67 -m state --state NEW -j ACCEPT
            iptables -A OUTPUT -p udp --dport 67 -m state --state NEW -j ACCEPT' >> $arq
            list_ips=$(mportas|awk '{print $2}')
            # Sunucudaki tÃ¼m aktif servislere ait portlara izin ver.
            while read PORT; do
                echo "iptables -A INPUT -p tcp --dport $PORT -j ACCEPT
                iptables -A INPUT -p udp --dport $PORT -j ACCEPT
                iptables -A OUTPUT -p tcp --dport $PORT -j ACCEPT
                iptables -A OUTPUT -p udp --dport $PORT -j ACCEPT" >> $arq
            done <<< "$list_ips"
            # Sunucuya ping (ICMP) isteklerini engelle.
            echo 'iptables -A INPUT -p icmp --icmp-type echo-request -j DROP' >> $arq
            # Torrent iÃ§in yaygÄ±n olarak kullanÄ±lan port aralÄ±ÄŸÄ±nÄ± engelle/yÃ¶nlendir.
            echo "iptables -t nat -A PREROUTING -i $NIC -p tcp --dport 6881:6889 -j DNAT --to-dest $IP
            iptables -A FORWARD -p tcp -i $NIC --dport 6881:6889 -d $IP -j REJECT
            iptables -A OUTPUT -p tcp --dport 6881:6889 -j DROP
            iptables -A OUTPUT -p udp --dport 6881:6889 -j DROP" >> $arq
            # Paket iÃ§eriÄŸinde BitTorrent ile ilgili anahtar kelimeleri ("BitTorrent", ".torrent", "peer_id" vb.) arayarak engelle.
            echo 'iptables -A FORWARD -m string --algo bm --string "BitTorrent" -j DROP
            iptables -A FORWARD -m string --algo bm --string "BitTorrent protocol" -j DROP
            iptables -A FORWARD -m string --algo bm --string "peer_id=" -j DROP
            iptables -A FORWARD -m string --algo bm --string ".torrent" -j DROP
            iptables -A FORWARD -m string --algo bm --string "announce.php?passkey=" -j DROP
            iptables -A FORWARD -m string --algo bm --string "torrent" -j DROP
            iptables -A FORWARD -m string --algo bm --string "announce" -j DROP
            iptables -A FORWARD -m string --algo bm --string "info_hash" -j DROP' >> $arq
            sleep 2
            chmod +x $arq
            # OluÅŸturulan kurallarÄ± uygula.
            /etc/Plus-torrent > /dev/null
        }
        # --- FONKSÄ°YON: KurallarÄ± uygularken bekleme animasyonu gÃ¶sterir ---
        fun_spn2 () {
            helice () {
                fun_fireon > /dev/null 2>&1 & 
                tput civis
                while [ -d /proc/$! ]; do
                    for i in / - \\ \|; do
                        sleep .1
                        echo -ne "\e[1D$i"
                    done
                done
                tput cnorm
            }
            echo -ne "\033[1;32mâ—‡ GÃœVENLÄ°K DUVARI UYGULANIYOR\033[1;32m.\033[1;33m.\033[1;31m. \033[1;32m"
            helice
            echo -e "\e[1Dâ—‡ TAMAMLANDI."
        }
        fun_spn2
        echo ""
        echo -e "\033[1;33mâ—‡ TORRENT\033[1;37m ENGELLEMESÄ° \033[1;33mUYGULANDI!\033[0m"
        echo ""
        echo -e "\033[1;32mâ—‡ GÃœVENLÄ°K DUVARI BAÅžARIYLA UYGULANDI!"
        sleep 3
        menu
    else
        sleep 1
        menu
    fi
fi